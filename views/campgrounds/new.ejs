<% include ../partials/header %>

<% include ../partials/navbar %>

<div class="container">
	<div class="page-header">
		<h1>Create a New Campground</h1>
	</div>
	<br>
	<form class="form-horizontal" action="/campgrounds" method="POST">
		<div class="form-group">
			<label for="inputCampsite" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="inputCampsite" name="campground[name]" placeholder="Campsite name">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCampsiteImage" class="col-sm-2 control-label">Image URL</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="inputCampsiteImage" name="campground[image]" placeholder="Campsite image">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCampsitePrice" class="col-sm-2 control-label">Price</label>
			<div class="col-sm-10">
				<input type="number" class="form-control" id="inputCampsitePrice" name="campground[price]" placeholder="Price (per night)" min="0.01" step="0.01">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCampsiteDescription" class="col-sm-2 control-label">Description</label>
			<div class="col-sm-10">
				<textarea class="form-control" id="inputCampsiteDescription" name="campground[description]" placeholder="Your description goes here..."></textarea>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Submit</button>
				<a class="btn btn-link" href="/campgrounds">Back</a>
			</div>
		</div>
	</form>
</div>


<% include ../partials/footer  %>
