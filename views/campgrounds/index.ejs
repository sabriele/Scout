<% include ../partials/header %>

<% include ../partials/navbar %>

<div class="container">
	<header class="jumbotron text-center">
		<div class="container">
			<h1>Welcome to Scout!</h1>
			<p class="lead">View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary" href="/campgrounds/new">Click to add more campgrounds</a>
			</p>
		</div>
	</header>

	<div class="row text-center thumbnailflex">
		<% campgrounds.forEach(function(campground) { %>
			<div class="col-md-3 col-xs-6">
				<div class="thumbnail">
					<div class="image-responsive">
						<img src="<%= campground.image %>">
					</div>
					<div class="caption"><h4><%= campground.name %></h4></div>
					<p><a href="/campgrounds/<%= campground._id %>" class="btn btn-default">More Info</a></p>
				</div>
			</div>
		<% });  %>
	</div>
</div>

<% include ../partials/footer %>
