<% include ../partials/header %>

<% include ../partials/navbar %>

<div class="container">
	<div class="page-header">
		<h1>Edit <%= campground.name %></h1>
	</div>
	<br>
	<form class="form-horizontal" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="inputCampsite" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="inputCampsite" name="campground[name]" value="<%= campground.name %>">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCampsiteImage" class="col-sm-2 control-label">Image URL</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="inputCampsiteImage" name="campground[image]" value="<%= campground.image %>">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCampsitePrice" class="col-sm-2 control-label">Price</label>
			<div class="col-sm-10">
				<input type="number" class="form-control" id="inputCampsitePrice" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
			</div>
		</div>
		<div class="form-group">
			<label for="inputCampsiteDescription" class="col-sm-2 control-label">Description</label>
			<div class="col-sm-10">
				<textarea class="form-control" id="inputCampsiteDescription" name="campground[description]"><%= campground.description %></textarea>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Submit</button>
				<a class="btn btn-link" href="/campgrounds/<%= campground._id %>">Back</a>
			</div>
		</div>
	</form>
</div>


<% include ../partials/footer  %>
