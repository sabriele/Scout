<% include ../partials/header  %>

<% include ../partials/navbar  %>

<div class="container">
	<div class="page-header">
		<h1>Add New Comment to <%= campground.name %></h1>
	</div>
	<br>
	<form class="form-horizontal" action="/campgrounds/<%= campground._id %>/comments" method="POST">
		<div class="form-group">
			<div class="col-sm-6">
				<textarea class="form-control" id="text" name="comment[text]" rows="8" placeholder="Please add your comments here..."></textarea>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary">Submit</button>
				<a class="btn btn-link" href="/campgrounds/<%= campground._id %>">Back</a>
			</div>
		</div>
	</form>
</div>


