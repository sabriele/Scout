<% include ../partials/header  %>

<% include ../partials/navbar  %>

<div class="container">
	<div class="page-header">
		<h1>Edit Comment</h1>
	</div>
	<br>
	<form class="form-horizontal" action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<div class="col-sm-12">
				<textarea class="form-control" id="text" name="comment[text]" rows="8"><%= comment.text %></textarea>
			</div>
		</div>
		<div class="form-group pull-right">
			<div class="col-sm-12">
				<a href="/campgrounds/<%= campgroundId %>" class="btn btn-link" >Back</a>
				<button type="submit" class="btn btn-info">Submit</button>
			</div>
		</div>
	</form>
</div>


