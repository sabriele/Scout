<!-- Error Message -->
<% if (error && error.length > 0) { %>
<div class="alert alert-danger alert-dismissible fade in" role=alert>
	<button type=button class=close data-dismiss=alert aria-label=Close>
		<span aria-hidden=true>&times;</span>
	</button>
